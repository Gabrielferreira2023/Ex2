#include <stdio.h>

int main() {
  
    float valor_produto, preco_final;
    char estado[3];

    printf("Digite o valor do produto: R$ ");
    scanf("%f", &valor_produto);

    printf("Digite o estado de destino (sigla): ");
    scanf("%s", estado);

    if (estado[0] == 'M' && estado[1] == 'G') {
        preco_final = valor_produto * 1.07;
      
    } else if (estado[0] == 'S' && estado[1] == 'P') {
        preco_final = valor_produto * 1.12;
      
    } else if (estado[0] == 'R' && estado[1] == 'J') {
        preco_final = valor_produto * 1.15;
      
    } else if (estado[0] == 'E' && estado[1] == 'S') {
        preco_final = valor_produto * 1.10;
      
    } else {
        printf("Estado de destino invalido.\n");
        return 1;
    }

    printf("O preco final do produto sera: R$ %.2f\n", preco_final);

    return 0;
}
